//This function checks if the inserted NUM is an even or odd number
function isEven(num){
	if(num%2==0){return true;}
	else{return false;}
}

//Code to check the previous function
console.log("Is Even function");
var ans=isEven(333);
console.log(ans);


//This one gets the factorial of a number
console.log("Factorial function");
function factorial(num){
	var num2=num;
	while(num>1){
		num--;
		num2*=num;
	}
	return num2
}
//Code to check the factorial of the number
var ans=factorial(4);
console.log(ans);


//This code changes the '-' simbol in any string to the new '_' simbol
console.log("Changing the - to _");
function replacing(string){
	var newString = string.replace(/-/g,"_");
	return newString;
}

//To check if the code workds
var rep = replacing("Hello-World-How-Are-You?");
console.log(rep);
